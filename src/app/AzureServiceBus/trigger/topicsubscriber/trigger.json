{
    "name": "azservicebus-topicsubscriber-trigger",
    "type": "flogo:trigger",
    "title": "AzureServiceBus TopicSubscriber",
    "version": "1.2.0",
    "author": "TIBCO Software Inc.",
    "display": {
      "category": "AzureServiceBus",
      "smallIcon": "icons/azservicebus_topicsubscriber.png",
      "largeIcon": "icons/azservicebus_topicsubscriber@2x.png",
      "wizard": [
        "Configuration"
      ]
    },
    "ref": "git.tibco.com/git/product/ipaas/wi-azservicebus.git/src/app/AzureServiceBus/trigger/topicsubscriber",
    "settings": [
      {
        "name": "azservicebusConnection",
        "type": "connection",
        "required": true,
        "display": {
          "name": "AzureServiceBus Connection",
          "description": "Choose a AzureServiceBus Connection",
          "type": "connection"
        },
        "wizard": {
          "type": "dropdown",
          "selection": "single",
          "step": "Configuration"
        },
        "allowed": []
      }
    ],
    "handler": {
    "settings": [  
      {
        "name": "topic",
        "type": "string",
        "required": true,
        "display": {
          "name": "Topic",
          "description": "Name of the Topic to subscribe to",
          "appPropertySupport": true
        }
      },
      {
        "name": "deadletter",
        "type": "boolean",
        "required": true,
        "value": false,
        "display": {
          "name": "DeadLetter Subscription",
          "description": "AzureServiceBus DeadLetter Subscription",
          "appPropertySupport": true
        }
                
      },
      {
        "name": "subscriptionName",
        "type": "string",
        "required": true,
        "display": {
          "name": "Subscription Name",
          "description": "Name of the Topic Subscription",
          "appPropertySupport": true
        }
      },
      {
        "name": "sessionId",
        "type": "string",
        "display": {
          "name": "SessionId",
          "description": "Id of the Session for the Topic to subscribe",
          "appPropertySupport": true
        }
      },
      {
        "name": "Timeout",
        "type": "integer",
        "display": {
          "description": "Context Timeout for Service bus. (Timeout=0, is indefinite)",
          "name": "Timeout",
          "appPropertySupport": true
        },
        "value": 0
      },
      {
        "name": "Count",
        "type": "integer",
        "display": {
          "description": "The maximum number of times to retry Trigger",
          "name": "Retry Count",
          "appPropertySupport": true
        },
        "value": 0
      }, 
      {
        "name": "Interval",
        "type": "integer",
        "display": {
          "description": "The time interval (in ms) between each retry attempt",
          "name": "Retry Interval",
          "appPropertySupport": true
        },
        "value": 0
      }, 
 
      {
        "name": "valueType",
        "type": "string",
        "display": {
          "name": "Value Deserializer",
          "description": "Type of record value to be received",
          "visible": false
        },
        "allowed": [
          "String",
          "JSON"
        ],
        "value": "String"
      }
    ]
  },
  "outputs": [
    {
      "name": "customProperties",
      "type": "params",
      "required": false,
      "display": {
        "name": "Custom Properties",
        "description": "Custom properties for each message.",
        "type": "params",
        "mappable": false,
        "enableClear": true,
        "outputSettingsOnly": true,
        "additionalProperties": true,
        "schema": "{\"type\":\"array\",\"items\":{\"type\":\"object\",\"properties\":{\"parameterName\":{\"type\":\"string\"},\"type\":{\"type\":{\"enum\":[\"integer\",\"string\",\"number\",\"boolean\",\"date\"]}},\"required\":{\"type\":{\"enum\":[\"true\",\"false\"]}}}}}"
      }
    },
    {
    "name": "output",
    "type": "object"
    }
  ],
    "actions": [
      {
        "name": "Finish"
      }
    ]
  }
